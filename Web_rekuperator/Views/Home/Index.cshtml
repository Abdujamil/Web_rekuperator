@{ ViewData["Title"] = "Home Page"; }

<div class="text-center">
    <h6 class="display-4 align-content-lg-between"><b>Исходные данные</b></h6>
    <form action="/Home/ResultData">
        <table border="1" class="table table-bordered" align="center" valign="bottom" style="box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);">
            <thead>
                <tr bgcolor="#343a40" style="color:white" >
                    <th><h4>Название</h4></th>
                    <th><h4>Значение</h4></th>
                    <th><h4>Измерение</h4></th>
                </tr>
                <tr>
                    <td>Расход топлива на печь</td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.B" value="9.335" required/></td>
                    <td align="center">м<sup><small>3</small></sup>/с</td>
                </tr>
                <tr>
                    <td>Коэффицент избыточного воздуха</td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.ALFA" value="1.05" required /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Реальный расход воздуха</td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.LALFA" value="1.54"  required/></td>
                    <td>м<sup><small>3</small></sup>/м<sup><small>3</small></sup></td>
                </tr>
                <tr>
                    <td>Навзание параметра VALFA</td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.VALFA" value="2.37" required /></td>
                    <td>м<sup><small>3</small></sup>/м<sup><small>3</small></sup></td>
                </tr>
                <tr>
                    <td>Реальный объем расход воздуха</td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.VL" value="3" required/></td>
                    <td>%</td>
                </tr>
                <tr>
                    <td>Температура продуктов горения уходящих из печи</td>
                    <td><input type="number" min="0.2" max="5000" step="any" name="data.TRO" value="1070"  required/></td>
                    <td><sup><small>0</small></sup>C</td>
                </tr>
                <tr>
                    <td>Среднеквадратическое отклонение температуры</td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.BETTAT" value="1"  required/></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Средная теплоемкость воздуха и газообразных видов топлива</td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.CV1" value="1.29" required /></td>
                    <td>кДж/м<sup><small>3</small></sup></td>
                </tr>
                <tr>
                    <td>Начальная температура подающего воздуха в рекуператор</td>
                    <td><input type="number" min="0.2" max="500" step="any" name="data.TV1" value="20"  required/></td>
                    <td><sup><small>0</small></sup>C</td>
                </tr>
                <tr>
                    <td>Средная теплоемкость воздуха и газообразных видов топлива </td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.CV2" value="1.34" required/></td>
                    <td>кДж/м<sup><small>3</small></sup></td>
                </tr>
                <tr>
                    <td>Конечная температура подающего воздуха в рекуператор</td>
                    <td><input type="number" min="0.2" max="5000" step="any" name="data.TV2" value="500" required/></td>
                    <td><sup><small>0</small></sup>C</td>
                </tr>
                <tr>
                    <td>Коэффицент учитывающий потери топлива </td>
                    <td><input type="number" min="0.2" max="50" step="any" name="data.ETA" value="0.9" required/></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Начальная температура подающего дыма в рекуператор</td>
                    <td><input type="number" step="any" name="data.TD1" value="1070" required /></td>
                    <td><sup><small>0</small></sup>C</td>
                </tr>
                <tr>
                    <td>Конечная температура подающего дыма в рекуператор</td>
                    <td><input type="number" min="0.2" max="2500" step="any" name="data.TD2" value="765" required/></td>
                    <td><sup><small>0</small></sup>C</td>
                </tr>
                <tr>
                    <td>Попровочный множетель</td>
                    <td><input type="number" min="0.1" max="50" step="any" name="data.KSIDELTAT" value="0.98" required /></td>
                    <td><sup><small>0</small></sup>C</td>
                </tr>
                <tr>
                    <td>Число блоков по ширине печи </td>
                    <td><input type="number" min="1" max="5000" step="any" name="data.Z1" value="24" required/></td>
                    <td>шт.</td>
                </tr>
                <tr>
                    <td>Число блоков по высоте печи </td>
                    <td><input type="number" min="1" max="5000" step="any" name="data.Z2" value="20" required /></td>
                    <td>шт.</td>
                </tr>
                <tr>
                    <td>Число блоков по длине печи </td>
                    <td><input type="number" min="1" max="5000" step="any" name="data.Z3" value="30" required/></td>
                    <td>шт.</td>
                </tr>
                <tr>
                    <td>Число ходов по дыму </td>
                    <td><input type="number" min="1" max="500" step="any" name="data.ETAD" value="2" required/></td>
                    <td>шт.</td>
                </tr>
                <tr>
                    <td>Число ходов по воздуху </td>
                    <td><input type="number" min="1" max="500" step="any" name="data.ETAV" value="1" required/></td>
                    <td>шт.</td>
                </tr>
                <tr>
                    <td>Эквивалентный диаметр дымовых каналов </td>
                    <td><input type="number" step="any" name="data.DDDK" value="0.158"  required/></td>
                    <td>м</td>
                </tr>
                <tr>
                    <td>Коэффициент теплоотдачи излучением  </td>
                    <td><input type="number" min="1" max="500" step="any" name="data.ALFADL1" value="23" required/></td>
                    <td>Вт/м<sup><small>3</small></sup></td>
                </tr>
                <tr>
                    <td>Поправочный коэффицент </td>
                    <td><input type="number" step="any" name="data.KT" value="0.91" required/></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Эквивалентный диаметр воздушных каналов </td>
                    <td><input type="number" step="any" name="data.DDVK" value="0.0565" required/></td>
                    <td>м</td>
                </tr>
                <tr>
                    <td>Толщина стенки выполненного из шмота </td>
                    <td><input type="number" step="any" name="data.S" value="0.02" required/></td>
                    <td>м</td>
                </tr>
                <tr>
                    <td>Размер блока </td>
                    <td><input type="number" step="any" name="data.FIBL" value="0.161" required/></td>
                    <td>м</td>
                </tr>
            </thead>
        </table>

        <div style="text-align: center;">

            <button class="button" type="reset"> <h6>Очистить таблицу</h6></button>

            <button class="button1" type="submit" data-toggle="modal" data-target="#exampleModal"><h6>Вычислить результать</h6></button>
        </div>
    </form>
